@using CarApp.Models
@model List<CarViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Car list</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Model</th>
                <th>Body type</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <th>@car.BrandName</th>
                    <th>@car.Model</th>
                    <th>@car.BodyType</th>
                    <th>@Html.ActionLink("Details", "Details", new { carNumber = car.CarNumber })</th>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Create new Car", "Create", "Car", new { @class = "btn-default" }, null)
</div>

